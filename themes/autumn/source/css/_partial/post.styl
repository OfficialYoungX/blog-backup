font-family = "SF Pro Text","SF Pro Icons","Helvetica Neue","Helvetica","Arial",sans-serif

.post
  position: relative
  border-bottom: 1px dashed #ddd
  margin: 0 0 4.5em
  padding: 0 0 3em
  .post-cat
    display: inline-block
    margin: 0 0 5px
    &:first-of-type::after
      content: "\00B7"
      margin: 0 .75em
      color: #f78769
    &:last-of-type::after 
      content: ''
    a
      font: 700 13px Lato-Bold
      color: #f78769
      text-decoration: none
      transition: .3s
      text-transform: upperCase
      letter-spacing: 1px
      &:hover
        color: #777

  .post-title
    margin: 0 0 .5em
    font: 3em font-family 
    color: #222
    font-weight: 700
    a
      transition: .5s cubic-bezier(.71,0,0,.99)
      text-decoration: none
      box-shadow: inset 0 -0.3em 0 #f78769
      &:hover
        box-shadow: inset 0 -0.8em 0 #f78769


  .post-date
    padding: 0
    list-style: none
    color: #bbb
    font: 14px/1.6 font-family
    li 
      display: inline-block
      &:first-child::after
        content: "\00B7"
        margin: 0 .75em
  .post-cover
    position: relative
    pointer-events: none
    img
      max-width: 80%

  .post-content
    position: relative
    color: #333
    font-size: 1rem
    line-height: 1.6
    margin-bottom: 1.5em
    text-align: left
    figure
      overflow-y: scroll
    blockquote
      margin-inline-start: 0
      margin-inline-end: 0
      border-left: 2px #777 solid
      padding-left: 2em;
    img
      max-width: 100%
      border-radius: 4px
