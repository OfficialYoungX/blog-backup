.header 
  text-align: center
  h1, h2 
    margin: 0
    line-height: 1.2
  .title 
    a
      color:color_1
      text-decoration: none
      font-weight: 700
      font-size: 4rem
      transition: .3s
      &:hover
        color: color_5
    
  .desc
      margin:.5em 0 .25em
      font-size: 20px
      font-weight: normal
      color: color_5

  .links 
    margin: 2.25em auto 4.5em
    border-top: 1px dashed color_2
    border-bottom: 1px dashed color_2
    font: 700 13px
    letter-spacing: 1px
    ul 
      text-decoration: none
      padding: 0
      li
        display: inline-block
        &::after
          content: "\00B7"
          margin: 0 .75em
        &:last-child::after 
          content: ''
        a
          color: color_3
          text-decoration: none
          transition: .3s
          &:hover
            color: color_1
  
  .ipad-menu
    display: none
    position: fixed
    top: 4em
    left: -1px

  .mobile-menu
    display: none
    position: fixed
    top: 0
    left: 0
    width: calc(100% - 3em)
    padding: 0 1.5em
    height: 3em
    z-index: 1
    box-shadow: 0px 1px 5px color_2
    h3
      a
        color:color_1
        text-decoration: none
        font: 700 1.6rem
        text-shadow: 1px 1px #fff, 2px 2px color_1
        &:hover
          color: color_5

  .menu
    padding: .5em 1em
    border: 1px dashed #fff
    outline: 5px solid color_5
    background: color_5
    font: 700 14px
    color: #fff
    text-transform: upperCase
          
    &::before 
      content: ''
      background: url('https://cdn.jsdelivr.net/gh/frontendsophie/hexo-theme-autumn@1.0.0/source/img/menu.svg')
      display: inline-block
      width: 16px
      height: 16px
      margin-right: 3px
      vertical-align: -3px

    &:focus, &:active
      background: color_1
      outline: 3px solid color_1

@media screen and (max-width: 1015px)
  .header
    .ipad-menu
      display: block

@media screen and (max-width: 640px) 
  .header 
    .title 
      a
        font-size: 2.5rem

    .ipad-menu
      display: none

    .mobile-menu 
      display: flex
      justify-content: space-between
      align-items: center
      .menu
        padding: .2em .5em
        font: 700 12px
        outline: 3px solid color_5

      
      
